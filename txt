<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Text Fetcher</title>
<style>
a {
  color: blue;
  text-decoration: underline;
  cursor: pointer;
}
</style>
</head>
<body>
<div id="text-container"></div>

<script>
document.addEventListener("DOMContentLoaded", function() {
    fetchText();
});

async function fetchText() {
    try {
        const response = await fetch('https://khangsvideoplayer.vercel.app/demo.txt');
        const text = await response.text();
        const textContainer = document.getElementById('text-container');
        const lines = text.split('\n');
        lines.forEach(line => {
            const p = document.createElement('p');
            const urls = line.match(/\bhttps?:\/\/\S+/gi);
            if (urls) {
                urls.forEach(url => {
                    const urlElement = document.createElement('a');
                    urlElement.href = url;
                    urlElement.textContent = url;
                    urlElement.addEventListener('click', () => {
                        copyToClipboard(url);
                    });
                    p.appendChild(document.createTextNode(line.replace(url, '')));
                    p.appendChild(urlElement);
                    textContainer.appendChild(p);
                    textContainer.appendChild(document.createElement('br'));
                });
            } else {
                p.textContent = line;
                textContainer.appendChild(p);
                textContainer.appendChild(document.createElement('br'));
            }
        });
    } catch (error) {
        console.error('Error fetching text:', error);
    }
}

function copyToClipboard(text) {
    const textarea = document.createElement('textarea');
    textarea.value = text;
    document.body.appendChild(textarea);
    textarea.select();
    document.execCommand('copy');
    document.body.removeChild(textarea);
    alert('Copied to clipboard: ' + text);
}
</script>
</body>
</html>
